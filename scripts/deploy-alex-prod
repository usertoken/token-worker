export DATE=$(date +%Y%m.%d.%s)
export TAG=$DATE
export COMMENT="Automated release TAG $DATE"
[ ! -z $1 ] && export COMMENT="$COMMENT : $1"
\rm -rf deploy
git clone  \
  https://alex2006hw@github.com/prod-alex2006hw/memory02.alex2006hw.com.git \
deploy
rm -rf build/.git
cp -r deploy/.git* build/
cp -r deploy/data build/
{
  echo $TAG at $DATE with $COMMENT
  cd build
  git add -A .
  git commit -m $DATE
  git tag -a $TAG -m "$COMMENT"
  git push --follow-tags
  cd ..
}
